{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="vh-100" style="background-color: #BCC4DB;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img
                                        src="https://images.unsplash.com/photo-1580537659466-0a9bfa916a54?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=687&q=80"
                                        alt="login form"
                                        class="img-fluid" style="border-radius: 1rem 0 0 1rem;"
                                />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <span class="h3 fw-bold mb-3">Mediatheque de La Chapelle-Curreaux</span>
                                        </div>

                                        <h5 class="fw-normal mb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="regform1" class="form-control form-control-lg" value="{{ last_username }}" name="email" autocomplete="email" required autofocus />
                                            <label class="form-label" for="regform1">Email address</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="password" id="regform2" class="form-control form-control-lg" name="password" autocomplete="current-password" required />
                                            <label class="form-label" for="regform2">Password</label>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >
                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-outline-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="{{ path('app_register') }}" style="color: #393f81;">Register here</a></p>
                                    </form>
                                    {% for flashSuccess in app.flashes('success') %}
                                        <div class="alert alert-success" role="alert">{{ flashSuccess }}</div>
                                    {%  endfor %}
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="alert alert-success" role="alert">
                                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
